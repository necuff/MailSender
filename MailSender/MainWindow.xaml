<Window x:Class="MailSender.WpfMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:fc="http://schemas.fontawesome.com/icons/"
        xmlns:vm="clr-namespace:WpfTest.ViewModels"
        mc:Ignorable="d"
        Title="Tasks" Height="600" Width="800">
    <Grid>
        <StackPanel>
            <UniformGrid>
                <Button Click="OnStartButtonClick">Запуск</Button>
                <Button Click="OnCancelButtonClick">Остановка</Button>
            </UniformGrid>
            <ProgressBar Name="_Progress" Height="30"/>
            <TextBlock>
                Результат: <Run Name="Result">Отсутствует</Run>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
