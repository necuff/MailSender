<Window x:Class="MailSender.WpfMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:fc="http://schemas.fontawesome.com/icons/"
        xmlns:vm="clr-namespace:WpfTest.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="600" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Title}"></TextBlock>
            <TextBox Text="{Binding Title}" HorizontalAlignment="Left" Width="300"></TextBox>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Width="300"></TextBox>
        </StackPanel>
    </Grid>
</Window>
