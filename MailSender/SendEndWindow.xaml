<Window x:Class="MailSender.SendEndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="SendEndWindow" Height="175" Width="400" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Background="{DynamicResource ControlBackgroundNormal}">
        <Label x:Name="lblMessage" Content="Сообщение отправлено!" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="28" Foreground="{DynamicResource ControlForeground}"/>
        <Button x:Name="btnOK" Content="OK" Margin="0,0,50,20" Width="94" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnOK_Click"/>

    </Grid>
</Window>
